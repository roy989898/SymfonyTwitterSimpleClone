{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
    
    {{ form_label(registrationForm.name,'Please enter the name',
        {'label_attr':{
            'class':'for_label'
        }}
    ) }}
    {{ form_widget(registrationForm.name,{
        'attr':{
            'class':'form_widget'
        }

    }) }}



    {{ form_label(registrationForm.email,'Please enter the email',
        {'label_attr':{
            'class':'for_label'
        }}
    ) }}
    {{ form_widget(registrationForm.email,{
        'attr':{
            'class':'form_widget'
        }

    }) }}



    {{ form_label(registrationForm.plainPassword,'Please enter the password',
        {'label_attr':{
            'class':'for_label'
        }}
    ) }}
    {{ form_widget(registrationForm.plainPassword,{
        'attr':{
            'class':'form_widget'
        }

    }) }}

    {{ form_label(registrationForm.agreeTerms,'agree term',
        {'label_attr':{
            'class':'for_label'
        }}
    ) }}
    {{ form_widget(registrationForm.agreeTerms,{
        'attr':{
            'class':'form_widget'
        }

    }) }}



    {#    {{ form_row(registrationForm.agreeTerms) }} #}

    <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
